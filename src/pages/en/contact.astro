---
import Layout from '../../layouts/Layout.astro';
import { useTranslation } from '../../i18n';
import { Image } from 'astro:assets';
import portal from '../../assets/portal.png';
import whatsappIcon from '../../assets/WhatsApp_icon.png';

const t = useTranslation('en');
---

<Layout lang="en" title="Contact - Caltrucafort" description={t('contact.description')}>
  <div class="container">
    <section class="hero">
      <Image 
        src={portal} 
        alt="Activitats - Escalada"
        width={1920}
        height={1080}
        class="hero-image"
        loading="lazy"
      />        
      <div class="hero-content"><h1>{t('contact.title')}</h1><p>{t('contact.subtitle')}</p></div>
    </section>

    <section class="py-xl mb-2xl">
      <div class="grid grid-3">
        <div class="contact-card">
          <span class="contact-icon">üìß</span>
          <h3>{t('contact.email')}</h3>
          <p><a href="mailto:montsecaltrucafort@gmail.com">montsecaltrucafort@gmail.com</a></p>
          <p style="font-size: 12px; color: #999;"></p>
        </div>
        <div class="contact-card">
          <Image 
            src={whatsappIcon} 
            alt="WhatsApp"
            width={60}
            height={60}
            class="contact-icon-img"
          />
          <h3>WhatsApp</h3>
          <p><a href="https://wa.me/34686989585" target="_blank" rel="noopener">686 98 95 85</a></p>
          <p style="font-size: 12px; color: #999;"></p>
        </div>
        <div class="contact-card">
          <span class="contact-icon">üìû</span>
          <h3>{t('contact.phoneCall')}</h3>
          <p><a href="tel:+34977819374">977 81 93 74</a></p>
          <p style="font-size: 12px; color: #999;"></p>
        </div>
      </div>
      <div class="grid grid-3" style="margin-top: var(--spacing-xl);">
        <div class="contact-card">
          <span class="contact-icon">üìç</span>
          <h3>{t('contact.location')}</h3>
          <p>{t('contact.address')}<br />{t('contact.addressCity')}</p>
          <p style="font-size: 12px; color: #999;">Spain</p>
        </div>
      </div>
    </section>

    <section class="py-xl bg-light" style="border-top: 1px solid var(--color-border);">
      <h2 class="text-center mb-xl">{t('contact.ourSchedule')}</h2>
      <div class="grid grid-2">
        <div class="contact-card">
          <span class="contact-icon">üçΩÔ∏è</span>
          <h3>{t('contact.restaurantTitle')}</h3>
          <p><strong>{t('contact.contactDays')}:</strong> {t('contact.contactHours')}</p>
          <p><strong>{t('contact.closedDays')}:</strong> {t('contact.closed')}</p>
          <div class="summer-hours">
            <p><strong>‚òÄÔ∏è {t('contact.summerScheduleTitle')}:</strong></p>
            <p>{t('contact.summerScheduleNote')}</p>
          </div>
        </div>

        <div class="contact-card">
          <span class="contact-icon">üè†</span>
          <h3>{t('contact.ruralHouseTitle')}</h3>
          <p>{t('contact.ruralHouseSchedule')}</p>
          <hr style="margin: 15px 0; border: 0; border-top: 1px solid #eee;" />
          <p class="special-note">
            <strong>{t('contact.guestService')}</strong><br />
          </p>
        </div>
      </div>
    </section>

    <section class="py-xl text-center">
      <h2 class="mb-lg">{t('contact.followUs')}</h2>
      <div class="social-links">
        <a href="https://facebook.com/caltrucafort" class="social-btn" title="Facebook">f</a>
        <a href="https://instagram.com/caltrucafort" class="social-btn" title="Instagram">üì∑</a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-icon {
    font-size: 50px;
    display: block;
    margin-bottom: 15px;
  }

  .contact-icon-img {
    display: block;
    margin: 0 auto 15px;
  }

  .contact-card {
    background: white;
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    text-align: center;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-border);
    transition: all var(--transition-normal);
  }

  .summer-hours {
    margin-top: 15px;
    padding: 10px;
    background-color: #fff9e6;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }

  .special-note {
    color: var(--color-primary);
    font-style: italic;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .contact-card h3 {
    margin-bottom: 10px;
    font-size: 20px;
  }

  .contact-card a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
  }

  .contact-card a:hover {
    text-decoration: underline;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .social-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background-color: var(--color-primary);
    color: white;
    border-radius: 50%;
    font-size: 24px;
    text-decoration: none;
    transition: all var(--transition-normal);
    font-weight: bold;
  }

  .social-btn:hover {
    background-color: #a60000;
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 768px) {
    .grid-2, .grid-3 {
      grid-template-columns: 1fr !important;
      gap: 20px;
    }
  }
</style>
