<style>
  .hero {
    position: relative;
    overflow: hidden;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    filter: brightness(0.7);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
  }

  .rate-card {
    background: white;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    text-align: center;
    transition: all var(--transition-normal);
  }

  .rate-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateY(-5px);
  }

  .rate-card h3 {
    font-size: 20px;
    margin-bottom: 10px;
  }

  .rate-card .price {
    font-size: 28px;
    font-weight: 700;
    color: var(--color-primary);
    margin: 10px 0;
  }

  .room-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-xl) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .room-block.reversed {
    direction: rtl;
  }

  .room-block.reversed > * {
    direction: ltr;
  }

  .room-image img {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    height: 400px;
    object-fit: cover;
  }

  .room-image :global(img) {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    height: 400px;
    object-fit: cover;
  }

  .room-info h3 {
    margin-bottom: var(--spacing-md);
  }

  .amenities-list {
    list-style: none;
    padding: 0;
    margin: var(--spacing-md) 0 0 0;
  }

  .amenities-list li {
    padding: 8px 0;
    color: #555;
  }

  .icons {
    font-size: 24px;
    display: flex;
    gap: 10px;
    margin-top: 15px;
    flex-wrap: wrap;
  }

  .gallery-privada {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin: 0 auto;
    max-width: 900px;
  }

  .gallery-privada img {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    height: 300px;
    object-fit: cover;
  }

  .gallery-privada :global(img) {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    height: 300px;
    object-fit: cover;
  }

  .amenities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  .amenity-item {
    text-align: center;
    padding: var(--spacing-lg);
    background: white;
    border-radius: var(--radius-md);
  }

  .amenity-icon {
    font-size: 40px;
    display: block;
    margin-bottom: 10px;
  }

  .btn {
    display: inline-block;
    background-color: var(--color-primary);
    color: white;
    padding: 15px 50px;
    border-radius: var(--radius-md);
    font-size: 18px;
    font-weight: 600;
    transition: all var(--transition-normal);
    cursor: pointer;
    text-decoration: none;
  }

  .btn:hover {
    background-color: #a60000;
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 768px) {
    .room-block {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .room-block.reversed {
      direction: ltr;
    }
  }

  .amazon-section {
    border-top: 1px solid #eee;
    padding-top: 60px;
    text-align: center;
    margin-top: 60px;
  }

  .amazon-section h3 {
    margin-bottom: 20px !important;
  }
</style>
